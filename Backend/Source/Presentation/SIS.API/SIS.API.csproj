    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>4cc0f874-5954-4eae-9cb9-4e45f1e2d219</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..\..</DockerfileContext>
